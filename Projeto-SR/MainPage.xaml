<Page
    x:Class="Projeto_SR.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Projeto_SR"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="Imagens/ImageDeFundo.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="614*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="341*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBoxMsg" TextWrapping="Wrap" Text="" Margin="19,6,-1,16" RenderTransformOrigin="0,0" 
                 Foreground="Black" Background="{x:Null}" BorderBrush="Black" InputScope="Default" SelectionHighlightColor="#FFF70A0A" GotFocus="textBoxMsg_GotFocus" Grid.Row="3" />

        <ListView x:Name="listViewMsg" Margin="15,2,3,0" BorderBrush="#FFEA1414" IsSynchronizedWithCurrentItem="False" AllowDrop="True" Grid.Row="1" Grid.ColumnSpan="2" SelectionMode="None"/>

        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="21,9,0,0" TextWrapping="Wrap" Text="Fala Job!" VerticalAlignment="Top" FontSize="24" Width="127" Height="35" Foreground="Black">
            <TextBlock.Projection>
                <PlaneProjection CenterOfRotationX="25" CenterOfRotationZ="25" CenterOfRotationY="30"/>
            </TextBlock.Projection>
        </TextBlock>

        <AppBarButton Icon="Important" Foreground="Black" Click="AppBarButton_Click" Background="{x:Null}" Margin="1,0,7,0" HorizontalAlignment="Stretch" Width="Auto" Grid.ColumnSpan="2" Grid.Column="1"  >
        </AppBarButton>

        <AppBarButton Icon="Setting" Foreground="Black" Click="AppBarButton_Click2" Background="{x:Null}" Margin="216,0,0,0.333" HorizontalAlignment="Stretch" Width="Auto" VerticalAlignment="Stretch"  />

        <AppBarButton x:Name="btnEnviar" HorizontalAlignment="Stretch" Icon="Send" Margin="6.533,5.2,10.332,13.948" VerticalAlignment="Stretch" Background="{x:Null}" Foreground="Black" RenderTransformOrigin="0.463,0.505" UseLayoutRounding="False" Width="Auto" d:LayoutRounding="Auto"  Click="btnEnviar_Click" Grid.Row="3" Grid.Column="1">
            <AppBarButton.RenderTransform>
                <CompositeTransform Rotation="0.308" TranslateY="-0.041" SkewY="-0.052" TranslateX="-0.001"/>
            </AppBarButton.RenderTransform>
        </AppBarButton>
        <Rectangle Margin="7,1,-0.333,9" RadiusY="18" Grid.Row="3" RadiusX="18" Stroke="Black" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
